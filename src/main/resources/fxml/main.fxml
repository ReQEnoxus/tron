<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane fx:id="anchorPane" onKeyPressed="#handleKeyPressed" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="tron.controller.MainController">
    <children>
        <Pane fx:id="contentPane" layoutX="0.5" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
              minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0">
            <children>
                <GridPane fx:id="gameGridPane" disable="true" focusTraversable="true" gridLinesVisible="true"
                          layoutY="121.0" prefHeight="600.0" prefWidth="1280.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                </GridPane>
                <ImageView fx:id="logoImageView" fitHeight="120.0" fitWidth="641.0" layoutX="-1.0" pickOnBounds="true"
                           preserveRatio="true"/>
                <Label fx:id="timeLabel" layoutX="640.0" layoutY="14.0" prefHeight="17.0" prefWidth="629.0" text="12:00"
                       textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font size="30.0"/>
                    </font>
                </Label>
                <Label fx:id="scoreLabel" layoutX="640.0" layoutY="60.0" prefHeight="17.0" prefWidth="629.0"
                       text="1;2;3;4" textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font size="30.0"/>
                    </font>
                </Label>
                <Button fx:id="exitButton" layoutX="14.0" layoutY="14.0" mnemonicParsing="false"
                        onAction="#exitButtonPressed" prefHeight="25.0" prefWidth="25.0" text="X"/>
            </children>
        </Pane>
    </children>
</AnchorPane>
